@model BuckTI.Models.CadClientes

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastro de Clientes</h1>
<hr />

<div class="row align-items-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCliente" class="control-label"> Nome do Cliente</label>
                <input asp-for="NomeCliente" class="form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="SobrenomeCliente" class="control-label">Sobrenome</label>
                <input asp-for="SobrenomeCliente" class="form-control" />
                <span asp-validation-for="SobrenomeCliente" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="CPFCliente" class="control-label">CPF</label>
                <input asp-for="CPFCliente" class="form-control" />
                <span asp-validation-for="CPFCliente" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="TelefoneCliente" class="control-label">Telefone</label>
                <input asp-for="TelefoneCliente" class="form-control" />
                <span asp-validation-for="TelefoneCliente" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div class="text-center">
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
