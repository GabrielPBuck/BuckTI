@model BuckTI.Models.CadSoftwares

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Softwares</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeSoftware" class="control-label">Nome do Software</label>
                <input asp-for="NomeSoftware" class="form-control" />
                <span asp-validation-for="NomeSoftware" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="VersaoSoftware" class="control-label">Versão</label>
                <input asp-for="VersaoSoftware" class="form-control" />
                <span asp-validation-for="VersaoSoftware" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="ValidadeSoftware" class="control-label">Data de Validade</label>
                <input asp-for="ValidadeSoftware" class="form-control" />
                <span asp-validation-for="ValidadeSoftware" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div class="text-center">
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
